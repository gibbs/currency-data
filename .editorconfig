root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2

[*.y{ml,aml}]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2
